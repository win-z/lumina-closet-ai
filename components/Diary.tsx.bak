
import React, { useState } from 'react';
import { DiaryEntry, ClothingItem } from '../types';
import ImageRenderer from './ImageRenderer';
import { Calendar, Trash2, CloudSun, Smile, Edit2, Save, X } from 'lucide-react';

interface Props {
  entries: DiaryEntry[];
  wardrobe: ClothingItem[];
  setEntries: React.Dispatch<React.SetStateAction<DiaryEntry[]>>;
}

const Diary: React.FC<Props> = ({ entries, wardrobe, setEntries }) => {
  const [editingId, setEditingId] = useState<string | null>(null);
  const [editForm, setEditForm] = useState<Partial<DiaryEntry>>({});

  const deleteEntry = (id: string) => {
    if(confirm("确定删除这条日记吗？")) {
        setEntries(prev => prev.filter(e => e.id !== id));
    }
  };

  const startEdit = (entry: DiaryEntry) => {
      setEditingId(entry.id);
      setEditForm(entry);
  };

  const cancelEdit = () => {
      setEditingId(null);
      setEditForm({});
  };

  const saveEdit = (id: string) => {
      setEntries(prev => prev.map(e => e.id === id ? { ...e, ...editForm } : e));
      setEditingId(null);
      setEditForm({});
  };

  const getItem = (id: string) => {
    return wardrobe.find(item => item.id === id);
  };

  // Sort by date desc
  const sortedEntries = [...entries].sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

  return (
    <div className="p-4 pb-28 space-y-6">
      <div className="flex items-center gap-3 mb-4">
        <h2 className="text-2xl font-bold font-serif text-slate-800">穿搭日记</h2>
        <span className="bg-rose-100 text-rose-600 px-2 py-0.5 rounded text-xs font-bold uppercase">OOTD</span>
      </div>

      {entries.length === 0 ? (
        <div className="bg-white rounded-3xl p-10 text-center border border-slate-100 shadow-sm">
            <Calendar className="mx-auto text-slate-300 mb-4" size={48} />
            <h3 className="text-slate-800 font-medium mb-1">暂无日记</h3>
            <p className="text-slate-400 text-sm">在“智能搭配”中保存您的每日穿搭。</p>
        </div>
      ) : (
        <div className="space-y-6 relative before:absolute before:inset-y-0 before:left-4 before:w-0.5 before:bg-slate-200">
            {sortedEntries.map((entry) => (
                <div key={entry.id} className="relative pl-10 animate-slide-up">
                    {/* Timeline Dot */}
                    <div className={`absolute left-2.5 -translate-x-1/2 top-6 w-3 h-3 bg-white border-2 rounded-full z-10 ${editingId === entry.id ? 'border-indigo-600 scale-125' : 'border-indigo-500'}`}></div>
                    
                    <div className={`bg-white rounded-2xl shadow-sm transition-all border overflow-hidden ${editingId === entry.id ? 'border-indigo-400 ring-2 ring-indigo-100' : 'border-slate-100 hover:shadow-lg'}`}>
                        {editingId === entry.id ? (
                            // EDIT MODE
                            <div className="p-4 space-y-3">
                                <div className="flex justify-between items-center mb-2">
                                    <span className="text-xs font-bold text-indigo-500 uppercase tracking-wider">编辑模式</span>
                                    <div className="flex gap-2">
                                        <button onClick={() => saveEdit(entry.id)} className="p-1.5 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors"><Save size={16} /></button>
                                        <button onClick={cancelEdit} className="p-1.5 bg-slate-100 text-slate-500 rounded-lg hover:bg-slate-200 transition-colors"><X size={16} /></button>
                                    </div>
                                </div>
                                <div>
                                    <label className="text-xs text-slate-400 block mb-1">日期</label>
                                    <input 
                                        type="date" 
                                        value={editForm.date} 
                                        onChange={e => setEditForm({...editForm, date: e.target.value})}
                                        className="w-full bg-slate-50 border border-slate-200 rounded-lg px-3 py-2 text-sm"
                                    />
                                </div>
                                <div className="grid grid-cols-2 gap-3">
                                    <div>
                                        <label className="text-xs text-slate-400 block mb-1">天气</label>
                                        <input 
                                            type="text" 
                                            value={editForm.weather} 
                                            onChange={e => setEditForm({...editForm, weather: e.target.value})}
                                            className="w-full bg-slate-50 border border-slate-200 rounded-lg px-3 py-2 text-sm"
                                        />
                                    </div>
                                    <div>
                                        <label className="text-xs text-slate-400 block mb-1">心情</label>
                                        <input 
                                            type="text" 
                                            value={editForm.mood} 
                                            onChange={e => setEditForm({...editForm, mood: e.target.value})}
                                            className="w-full bg-slate-50 border border-slate-200 rounded-lg px-3 py-2 text-sm"
                                        />
                                    </div>
                                </div>
                                <div>
                                    <label className="text-xs text-slate-400 block mb-1">备注</label>
                                    <textarea 
                                        value={editForm.notes} 
                                        onChange={e => setEditForm({...editForm, notes: e.target.value})}
                                        className="w-full bg-slate-50 border border-slate-200 rounded-lg px-3 py-2 text-sm h-20 resize-none"
                                    />
                                </div>
                            </div>
                        ) : (
                            // VIEW MODE
                            <>
                                <div className="p-4 border-b border-slate-50 flex justify-between items-start">
                                    <div>
                                        <div className="font-serif text-lg font-bold text-slate-800">{entry.date}</div>
                                        <div className="flex gap-3 text-xs text-slate-500 mt-1">
                                            <span className="flex items-center gap-1"><CloudSun size={12} /> {entry.weather}</span>
                                            <span className="flex items-center gap-1"><Smile size={12} /> {entry.mood}</span>
                                        </div>
                                    </div>
                                    <div className="flex gap-1">
                                        <button onClick={() => startEdit(entry)} className="p-2 text-slate-300 hover:text-indigo-500 transition-colors"><Edit2 size={16} /></button>
                                        <button onClick={() => deleteEntry(entry.id)} className="p-2 text-slate-300 hover:text-red-400 transition-colors"><Trash2 size={16} /></button>
                                    </div>
                                </div>
                                
                                <div className="p-4">
                                    <p className="text-sm text-slate-600 mb-4 italic">"{entry.notes}"</p>
                                    
                                    {/* Items Worn */}
                                    <div className="flex gap-2 overflow-x-auto pb-2 scrollbar-hide">
                                        {entry.clothingIds.map(id => {
                                            const item = getItem(id);
                                            if (!item) return null;
                                            return (
                                                <div key={id} className="w-16 h-16 flex-shrink-0 bg-slate-50 rounded-lg border border-slate-100 overflow-hidden">
                                                    <ImageRenderer src={item.imageFront} className="w-full h-full object-cover" />
                                                </div>
                                            )
                                        })}
                                    </div>

                                    {/* Try On Photo if available */}
                                    {entry.photo && (
                                        <div className="mt-4 rounded-xl overflow-hidden border border-slate-100">
                                            <img src={entry.photo} className="w-full object-cover" />
                                            <div className="bg-slate-50 p-2 text-center text-[10px] text-slate-400">虚拟试穿记录</div>
                                        </div>
                                    )}
                                </div>
                            </>
                        )}
                    </div>
                </div>
            ))}
        </div>
      )}
    </div>
  );
};

export default Diary;
